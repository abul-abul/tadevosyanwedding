{% extends 'AppBundle::layout.html.twig' %}


{% block main %}
    <div class="gla_page_title gla_image_bck gla_wht_txt" data-color="#282828" style="background-color: rgb(40, 40, 40);">



        <div class="container text-left">
            <div class="row">

                <div class="col-md-8">
                    <h1 class="gla_h1_title">{{ about.title }}</h1>

                </div>

                <div class="col-md-4">
                    <div class="breadcrumbs">
                        <a href="{{ path('homepage') }}">Home</a><span>About</span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <section id="gla_content" class="gla_content">



        <!-- section -->
        <section class="gla_section gla_image_bck" data-color="#fafafd">



            <div class="container text-center">
                <p><img src="{{ asset('bundles/app/images/animations/flower5.gif') }}" data-bottom-top="@src:/bundles/app/images/animations/flower5.gif; opacity:1" class="gla_animated_flower" height="150" alt=""></p>
                <h2>{{ about.title }}</h2>
                {#<h3 class="gla_subtitle">{{ about.title }}</h3>#}



                <p>
                    {{ about.description }}
                </p>



            </div>
            <!-- container end -->

        </section>
        <!-- section end -->

        <!-- section -->
        <section class="gla_section gla_image_bck gla_fixed" data-stellar-background-ratio="0.2" data-image="/bundles/app/images/wedding/ian_kelsey/14816119004_915ea67cff_k.jpg">


            <div class="container">
                <div class="row gla_auto_height">
                    {% for service in services %}
                        {% if (loop.index is even) %}
                            <div class="col-md-6   gla_image_bck" data-color="#eee">
                        {% else %}
                            <div class="col-md-6 col-md-push-6 gla_image_bck" data-color="#eee">
                        {% endif %}
                     {#<div class="col-md-6   gla_image_bck" data-color="#eee">#}
                        <div class="gla_simple_block">
                            <h2>{{ service.name }}</h2>
                            <p>{{ service.description }}</p>
                            <!-- Social Buttons -->
                            <div class="gla_footer_social">
                                <a href="#"><i class="ti ti-facebook gla_icon_box"></i></a>
                                <a href="#"><i class="ti ti-instagram gla_icon_box"></i></a>

                            </div>
                        </div>

                    </div>

                    <div class="col-md-6  {% if (loop.index is odd) %}col-md-pull-6{% endif %} gla_image_bck" data-image="{% path service.image,'big' %}">

                    </div>
                    {% endfor %}

                </div>

            </div>
            <!-- container end -->

        </section>
        <!-- section end -->

        <!-- section -->


        <!-- section end -->



    </section>



{% endblock %}